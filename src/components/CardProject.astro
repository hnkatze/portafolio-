---
import { Image } from "astro:assets";
import { ExternalLink, Github } from "lucide-react";

const { title, description, images, technologies, projectUrl, repoUrl } =
  Astro.props;
---

<div
  class='w-[350px] lg:w-[340px] flex flex-col border border-gray-700 rounded-xl shadow-lg bg-gradient-to-br from-gray-900 via-gray-800 to-gray-700 transition-transform duration-300 hover:scale-105'>
  <div class='relative'>
    <Image
      src={images}
      alt={title}
      width={50}
      height={80}
      class='w-full h-44 object-cover rounded-t-xl hover:opacity-90 transition-opacity duration-300'
    />
  </div>

  <div class='p-4 flex flex-col justify-between text-white'>
    <h2
      class='font-bold text-2xl mb-2 text-transparent bg-clip-text bg-gradient-to-r from-teal-400 via-indigo-500 to-purple-600'>
      {title}
    </h2>
    <p class='text-sm text-gray-400 mb-4'>{description}</p>

    <div class='flex flex-wrap gap-2 mb-4'>
      {
        technologies.map((tech: string) => (
          <span class='bg-gray-800 text-teal-400 text-xs font-semibold px-2.5 py-1 rounded-lg border border-teal-500 hover:bg-teal-500 hover:text-gray-900 transition-colors duration-200'>
            {tech}
          </span>
        ))
      }
    </div>

    <div class='w-full flex justify-between items-center mt-auto'>
      <a
        href={repoUrl}
        target='_blank'
        class='flex items-center text-gray-400 hover:text-teal-400 transition-colors duration-200'>
        <Github className='h-5 w-5 mr-1' />
        <span>Repo</span>
      </a>
      {
        projectUrl != "" ? (
          <a
            href={projectUrl}
            target='_blank'
            class='flex items-center text-gray-400 hover:text-teal-400 transition-colors duration-200'>
            <ExternalLink className='h-5 w-5 mr-1' />
            <span>Live</span>
          </a>
        ) : null
      }
    </div>
  </div>
</div>
