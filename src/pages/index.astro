---
import Layout from "../layouts/Layout.astro";
import meb from "../../public/tshirtw.png";
import { Image } from "astro:assets";
import linkedin from "../assets/linkedin.svg";
import "../styles/switch.css";
import "../styles/global.css";
import CardProject from "@/components/CardProject.astro";
import Skills from "@/components/Skills";
import { projects } from "@/libs/utils";
---

<Layout title='Portafolio Camilo'>
  <section
    class='lg:h-96 w-full flex flex-col bg-gradient-to-r from-blue-500 to-purple-600 shadow-xl'
    title='Presentacion'>
    <div
      class='text-white flex flex-col lg:flex-row gap-10 justify-center items-center pt-5 pb-5'>
      <div class='w-full lg:w-1/2 text-center lg:text-left'>
        <h1 class='text-4xl lg:text-6xl font-bold mt-10'>
          Hola, soy Camilo Henriquez
        </h1>
        <p class='text-xl lg:text-3xl font-normal mx-4 md:mx-0 mt-10'>
          Desarrollador Full Stack apasionado por crear soluciones creativas y
          sobre todo innovadoras.
        </p>
      </div>

      <Image
        src={meb}
        alt='foto'
        width={300}
        height={300}
        class='rounded-full'
        style='box-shadow: 10px 20px 25px rgba(255, 255, 255, 0.3);'
      />
    </div>
    <div
      class='w-full flex flex-col lg:flex-row justify-center gap-3 items-center text-white mt-5 pb-3 lg:mt-0'>
      <a
        href='https://github.com/hnkatze'
        title='Visita mi perfil de GitHub'
        class='flex flex-row justify-center items-center gap-2 lg:mb-0'>
