      <a
        href='https://www.linkedin.com/in/hnkatze/'
        title='Visita mi perfil de LinkedIn'
        class='flex flex-row justify-center items-center gap-2'>
        <Image
          src={linkedin}
          alt='linkedin'
          width={30}
          height={30}
          class='w-8 h-8'
        />
        <p class='text-xl font-bold hover:underline'>/camilo-henriquez</p>
      </a>
