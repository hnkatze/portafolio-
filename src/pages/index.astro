            </path>

            <circle cx='167.5' cy='223.5' r='50' fill='#7b7f78'></circle>
            <circle cx='338.5' cy='223.5' r='50' fill='#7b7f78'></circle>
          </g>
        </svg>

        <p class='text-xl font-bold hover:underline'>Katze#9714</p>
      </a>
    </div>
  </section>
  <Skills client:only />
  <section
    title='Proyectos'
    class='w-full flex flex-col items-center justify-center py-8'>
    <h2 class='text-4xl font-bold text-center text-gray-800 my-10'>
      Proyectos Destacados
    </h2>
    <div
      class='w-11/12 gap-5 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 justify-items-center'>
      {
        projects.map((items) => (
          <CardProject
            title={items.title}
            description={items.description}
            images={items.images}
            technologies={items.technologies}
            projectUrl={items.projectUrl}
            repoUrl={items.repoUrl}
          />
        ))
      }
    </div>
  </section>
</Layout>
